&Завязь(Значение = "ТаблицаРезультатовТестов", Тип = "ТаблицаЗначений")
&Характер("Компанейский")
Функция ПолучитьТаблицаРезультатовТестов() Экспорт
	ТаблицаРезультатов = Новый ТаблицаЗначений();
	ТаблицаРезультатов.Колонки.Добавить("Идентификатор");
	ТаблицаРезультатов.Колонки.Добавить("Парсер");
	ТаблицаРезультатов.Колонки.Добавить("Дата");
	ТаблицаРезультатов.Колонки.Добавить("ВидТестов");
	ТаблицаРезультатов.Колонки.Добавить("Успешно");
	ТаблицаРезультатов.Колонки.Добавить("Результаты");

	Возврат ТаблицаРезультатов;
КонецФункции

&Завязь(Значение = "ДетальнаяТаблицаРезультатовТестов", Тип = "ТаблицаЗначений")
&Характер("Компанейский")
Функция ПолучитьДетальнаяТаблицаРезультатовТестов() Экспорт
	ТаблицаРезультатов = Новый ТаблицаЗначений();
	ТаблицаРезультатов.Колонки.Добавить("Набор");
	ТаблицаРезультатов.Колонки.Добавить("Тест");
	ТаблицаРезультатов.Колонки.Добавить("Ошибка");
	ТаблицаРезультатов.Колонки.Добавить("НеПройден");
	ТаблицаРезультатов.Колонки.Добавить("Пропущен");
	ТаблицаРезультатов.Колонки.Добавить("Успешно");
	ТаблицаРезультатов.Колонки.Добавить("Статус");
	ТаблицаРезультатов.Колонки.Добавить("Время");
	ТаблицаРезультатов.Колонки.Добавить("Сообщение");

	Возврат ТаблицаРезультатов;
КонецФункции

